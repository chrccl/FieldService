{
  "name": "professional-problem-reporter",
  "version": "1.0.0",
  "description": "Web app per documentare problemi professionali con AI analysis",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "dev:full": "concurrently \"npm run dev\" \"cd client && npm start\""
  },
  "keywords": [
    "react",
    "nodejs",
    "openai",
    "pdf",
    "professional",
    "reporting"
  ],
  "author": "Professional Problem Reporter Team",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
